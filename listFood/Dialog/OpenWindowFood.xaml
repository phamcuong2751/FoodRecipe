<UserControl x:Class="listFood.Dialog.OpenWindowFood"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:listFood.Dialog"
             xmlns:converters="clr-namespace:listFood.Dialog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:RelativeToAbsolutePathConverter x:Key="pathConverter"/>
    </UserControl.Resources>
    <Canvas Background="White">
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Height="51" FontSize="40" FontWeight="Bold" Margin="0,15,0,0" TextWrapping="Wrap" Text="{Binding _nameOfFood }" VerticalAlignment="Top" Width="799"/>
        <Image Source="{Binding _cover,Converter={StaticResource pathConverter}}" Margin="12,90,504,98"/>
        <TextBlock Height="275" Canvas.Left="393" TextWrapping="Wrap" Text="{Binding _howToFood}" Canvas.Top="105" Width="407"/>
        <TextBlock Height="39" Canvas.Left="766" TextWrapping="Wrap" Text="{Binding _rating}" Canvas.Top="408" Width="30"/>

    </Canvas>
</UserControl>
