                    <DockPanel>
                        <Label Content="18600011" Background="White" Foreground="#AA381F"
                               FontWeight="Bold" FontSize="15"/>
                        <Label Content="NGUYỄN TRỌNG QUYẾT" BorderThickness="1" BorderBrush="White"
                               FontWeight="Bold" FontSize="15" Foreground="White"/>
                    </DockPanel>
                    <TextBlock Text="ntquyet37@gmail.com" FontSize="15" FontWeight="Light" 
                               Foreground="White" Margin="0 0 0 30"/>
                </StackPanel>
                <StackPanel>
                    <DockPanel>
