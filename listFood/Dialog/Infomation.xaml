        <Image Source="/img/bn2_v4.jpg"
               Grid.ColumnSpan="2"
               Grid.RowSpan="3"
               HorizontalAlignment="Right"
               Panel.ZIndex="-1"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"/>
