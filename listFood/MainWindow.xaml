<Window x:Class="listFood.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Splash_Screen"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Home" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Canvas>
        <!--Tố Ngu-->
        <materialDesign:DrawerHost Panel.ZIndex="100"
             Width="795" Height="422" Canvas.Left="-2">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <StackPanel Width="200" Background="#AA381F" >
                    <Button Margin="4 20 4 40" HorizontalAlignment="Center"
                            Padding="0" Content="MENU" 
                            Background="#AA381F" materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                            BorderBrush="#AA381F" FontSize="30" FontWeight="Bold" Foreground="White">
                    </Button>
                    <Grid Height="225" Width="150">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45*"></RowDefinition>
                            <RowDefinition Height="45*"></RowDefinition>
                            <RowDefinition Height="45*"></RowDefinition>
                            <RowDefinition Height="45*"></RowDefinition>
                            <RowDefinition Height="45*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Code Cường-->
                        <Button Content="Trang chủ"
                                FontWeight="Light"
                                Background="#AA381F"
                                BorderBrush="#fff"
                                BorderThickness="0 0.5 0 0.5"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                                Height="Auto" Margin="0,0,0,5.333"/>
                        <Button Content="Danh sách món ăn"
                                FontWeight="Light"
                                Background="#AA381F"
                                BorderBrush="#fff"
                                BorderThickness="0 0 0 0.5"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                                Height="Auto" Margin="0,45,0,4.667" Grid.RowSpan="2"/>
                        <Button Content="Thêm món" Grid.Row="2"
                                FontWeight="Light"
                                Background="#AA381F"
                                BorderBrush="#fff"
                                BorderThickness="0 0 0 0.5"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Height="Auto" Margin="0,0.333,0,5.333"/>
                        <Button Content="Thông tin" Grid.Row="2"
                                FontWeight="Light"
                                Background="#AA381F"
                                BorderBrush="#fff"
                                BorderThickness="0 0 0 0.5"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Height="Auto" Margin="0,44.333,0,4.667" Grid.RowSpan="2"/>
                        <Button Content="Thoát" Grid.Row="4"
                                FontWeight="Light"
                                Background="#AA381F"
                                BorderBrush="#fff"
                                BorderThickness="0 0 0 0.5"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Height="Auto"/>
                         <!--Code Cường-->
                    </Grid>
                </StackPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <Grid  MinWidth="480" MinHeight="480">
                <Button Panel.ZIndex="100" Background="#AA381F" 
                HorizontalAlignment="Center"  VerticalAlignment="Center" 
                materialDesign:ShadowAssist.ShadowDepth="Depth0" BorderBrush="#AA381F" 
        Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}" Height="Auto" Margin="4,7,711,421">
                    <materialDesign:PackIcon
          Kind="Menu" Height="44" Width="55" />
                </Button>
            </Grid>
        </materialDesign:DrawerHost>
        <!--Tố Ngu-->
        <!--Cường Xl-->
        <materialDesign:ColorZone Mode= "PrimaryLight" Padding="16" Width="795" Background="#AA381F">
            <DockPanel>
                <StackPanel Orientation="Horizontal" materialDesign:RippleAssist.IsCentered="True">
                    <materialDesign:ColorZone Mode="Standard" Padding="8 4 8 4" CornerRadius="20"
                         Panel.ZIndex="1" Margin="380 0 0 0" materialDesign:ShadowAssist.ShadowDepth="Depth1" Width="374">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="19*"/>
                                <RowDefinition Height="13*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button Style="{DynamicResource MaterialDesignToolButton}" Grid.RowSpan="2">
                                <materialDesign:PackIcon Kind="Magnify" Opacity=".56" Height="22" Width="22" />
                            </Button>
                            <TextBox  Grid.Column="1" Margin="8,4,0,4" materialDesign:HintAssist.Hint="Nhập từ khoá để tìm công thức..."
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden" BorderThickness="0"  MinWidth="200"
                             VerticalAlignment="Center" Grid.RowSpan="2"></TextBox>
                        </Grid>
                    </materialDesign:ColorZone>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <Ellipse Height="120" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                 Fill="#AA381F" Canvas.Left="62" Canvas.Top="94"/>
        <Ellipse Height="120" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                 Fill="#AA381F" Canvas.Left="70" Canvas.Top="261"/>

        <Image Source="/img/Canh.png" Height="120" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Canvas.Left="70" Canvas.Top="94" />
        <Image Source="/img/Vit_nuong.png" Height="120" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Canvas.Left="78" Canvas.Top="261" />

        <Image Source="/img/star-1.png" Height="30" Canvas.Left="167" Canvas.Top="261" />
        <Image Source="img/star-1.png" Height="30" Canvas.Left="167" Canvas.Top="94" />
        <ListBox Canvas.Left="397" Canvas.Top="104" Height="290" Width="363">
            <TextBlock Width="345" Height="29"
                       Text="SALAD CÀ CHUA DƯA CHUỘT"/>
            <TextBlock Width="345" Height="29"
                       Text="SALAD CÀ CHUA DƯA CHUỘT"/>
            <TextBlock Width="345" Height="29"
                       Text="SALAD CÀ CHUA DƯA CHUỘT"/>
            <TextBlock Width="345" Height="29"
                       Text="SALAD CÀ CHUA DƯA CHUỘT"/>
            <TextBlock Width="345" Height="29"
                       Text="SALAD CÀ CHUA DƯA CHUỘT"/>
            <TextBlock Width="345" Height="29"
                       Text="SALAD CÀ CHUA DƯA CHUỘT"/>
            <TextBlock Width="345" Height="29"
                       Text="SALAD CÀ CHUA DƯA CHUỘT"/>

        </ListBox>
        <!--Cường Xl-->
    </Canvas>
</Window>
