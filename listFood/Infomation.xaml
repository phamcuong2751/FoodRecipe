<Window x:Class="listFood.Infomation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:listFood"
        mc:Ignorable="d"
        Title="Infomation" Height="650" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Border Background="#AA381F">
                <TextBlock Text="INFOMATION" HorizontalAlignment="Center" FontSize="40" FontWeight="Light" Foreground="White" Margin="10"></TextBlock>
            </Border>
            <Grid Height="547">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
